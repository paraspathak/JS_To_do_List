{
  "manifest_version": 2,
  "name": "JS Todo App",
  "version": "1.0",

  
  "description": "Todo App for managing your busy day",
  "icons": {
      "128":"icons_128.png"
  },
  "browser_action" : {
      "default_icon" : "icon.png",
      "default_popup" : "popup.html"
  },
  "background": {
  "scripts": ["background.js"],
  "persistent": true
},
"commands": {
  "copy-webpage-link": {
    "suggested_key": {
      "default": "Alt+K",
      "mac": "Alt+K"
    },
    "description": "Copy-Webpage-Link",
    "global":"true"
  },
  "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+Y"
      }
  },
  "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "windows": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      }
  }
},
"permissions":[
    "activeTab",
    "storage",
    "contextMenus"
]
}